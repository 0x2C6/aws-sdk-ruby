{
  "type": "object",
  "required": ["resources"],
  "additionalProperties": false,
  "properties": {
    "service": {
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "actions": { "$ref": "#/definitions/Actions" },
        "hasMany": { "$ref": "#/definitions/HasMany" }
      }
    },
    "resources": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [],
        "additionalProperties": false,
        "properties": {
          "shape":            { "$ref": "#/definitions/ShapeName" },
          "identifiers":      { "$ref": "#/definitions/Identifiers" },
          "load":             { "$ref": "#/definitions/Load" },
          "actions":          { "$ref": "#/definitions/Actions" },
          "batchActions":     { "$ref": "#/definitions/Actions" },
          "waiters":          { "$ref": "#/definitions/Waiters" },
          "hasMany":          { "$ref": "#/definitions/HasMany" },
          "hasSome":          { "$ref": "#/definitions/HasSomeMap" },
          "hasOne":           { "$ref": "#/definitions/HasOneMap" },
          "subResources":     { "$ref": "#/definitions/SubResources" }
        }
      }
    }
  },
  "definitions": {
    "Actions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["request"],
        "additionalProperties": false,
        "properties": {
          "request": { "$ref": "#/definitions/Request" },
          "resource": { "$ref": "#/definitions/ResourceBuilder" }
        }
      }
    },
    "HasMany": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["request", "resource"],
        "additionalProperties": false,
        "properties": {
          "request": { "$ref": "#/definitions/Request" },
          "resource": { "$ref": "#/definitions/ResourceBuilder" }
        }
      }
    },
    "HasOneMap": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/ResourceReference" }
    },
    "HasSomeMap": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/ResourceReference" }
    },
    "Identifier": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "$ref": "#/definitions/IdentifierName" },
        "type": { "$ref": "#/definitions/IdentifierType" },
        "memberName": { "type": "string" }
      }
    },
    "Identifiers": {
      "type": "array",
      "additionalItems": false,
      "items": { "$ref": "#/definitions/Identifier" }
    },
    "IdentifierName": { "$ref": "#/definitions/UpperCamelCaseString" },
    "IdentifierType": {
      "type": "string",
      "enum": [
        "string",
        "integer"
      ]
    },
    "JMESPathExpression": {
      "type": "string",
      "minLength": 1
    },
    "Load": {
      "type": "object",
      "required": ["request", "path"],
      "additionalProperties": false,
      "properties": {
        "request": { "$ref": "#/definitions/Request" },
        "path": { "$ref": "#/definitions/JMESPathExpression" }
      }
    },
    "OperationName": { "type": "string" },
    "Request": {
      "type": "object",
      "required": ["operation"],
      "additionalProperties": false,
      "properties": {
        "operation": { "$ref": "#/definitions/OperationName" },
        "params":  { "$ref": "#/definitions/RequestParamList" }
      }
    },
    "RequestParam": {
      "type": "object",
      "required": [
        "target",
        "sourceType",
        "source"
      ],
      "additionalProperties": false,
      "properties": {
        "target": { "type": "string" },
        "sourceType": {
          "type": "string",
          "enum": ["identifier", "dataMember", "string", "integer", "boolean"]
        },
        "source": { "type": "string" }
      }
    },
    "RequestParamList": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": { "$ref": "#/definitions/RequestParam" }
    },
    "ResourceIdentifier": {
      "type": "object",
      "required": [
        "target",
        "sourceType",
        "source"
      ],
      "additionalProperties": false,
      "properties": {
        "target": { "$ref": "#/definitions/IdentifierName" },
        "sourceType": {
          "type": "string",
          "enum": [
            "identifier",
            "dataMember",
            "requestParameter",
            "responsePath"
          ]
        },
        "source": { "type": "string" }
      }
    },
    "ResourceIdentifierList": {
      "type": "array",
      "additionalItems": false,
      "items": { "$ref": "#/definitions/ResourceIdentifier" }
    },
    "ResourceBuilder": {
      "type": "object",
      "required": ["type", "identifiers"],
      "additionalProperties": false,
      "properties": {
        "type": { "$ref": "#/definitions/ResourceName" },
        "identifiers": { "$ref": "#/definitions/ResourceIdentifierList" },
        "path": { "$ref": "#/definitions/JMESPathExpression" }
      }
    },
    "ResourceName": { "$ref": "#/definitions/UpperCamelCaseString" },
    "ResourceReference": {
      "type": "object",
      "required": ["resource"],
      "additionalProperties": false,
      "properties": {
        "resource": { "$ref": "#/definitions/ResourceBuilder" },
        "path": { "$ref": "#/definitions/JMESPathExpression" }
      }
    },
    "ShapeName": { "type": "string" },
    "SubResourceIdentifierMap": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/UpperCamelCaseString" }
    },
    "SubResourceList": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": { "$ref": "#/definitions/ResourceName" }
    },
    "SubResources": {
      "type": "object",
      "required": [
        "resources",
        "identifiers"
      ],
      "additionalProperties": false,
      "properties": {
        "resources": { "$ref": "#/definitions/SubResourceList" },
        "identifiers": { "$ref": "#/definitions/SubResourceIdentifierMap" }
      }
    },
    "UpperCamelCaseString": {
      "type": "string",
      "minLength": 1
    },
    "Waiters": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "waiterName"
        ],
        "additionalProperties": false,
        "properties": {
          "waiterName": { "$ref": "#/definitions/UpperCamelCaseString" },
          "params":  { "$ref": "#/definitions/RequestParamList" },
          "path": { "$ref": "#/definitions/JMESPathExpression" }
        }
      }
    }
  }
}
